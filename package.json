{
  "name": "git-history-explorer",
  "displayName": "Git History Explorer",
  "description": "Browse the Git history of your files.",
  "version": "1.1.0",
  "license": "MIT",
  "publisher": "KevinPy",
  "author": {
    "name": "Kevin Py",
    "url": "https://kevinpy.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pyxel-dev/git-history.git"
  },
  "engines": {
    "node": ">= 24",
    "npm": "please use pnpm",
    "pnpm": ">= 10",
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "keywords": [
    "git",
    "history",
    "blame",
    "log"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "icon": "images/icon.png",
  "contributes": {
    "commands": [
      {
        "command": "git-history.showFileHistory",
        "title": "Git History : Display Git file history",
        "icon": "$(history)"
      },
      {
        "command": "git-history.navigatePrevious",
        "title": "Git History: Previous commit",
        "icon": "$(chevron-left)"
      },
      {
        "command": "git-history.navigateNext",
        "title": "Git History: Next commit",
        "icon": "$(chevron-right)"
      },
      {
        "command": "git-history.showCommitDiff",
        "title": "Git History: Show commit diff"
      },
      {
        "command": "git-history.refreshSourceControlHistory",
        "title": "Git History: Refresh file history",
        "icon": "$(refresh)"
      }
    ],
    "views": {
      "scm": [
        {
          "id": "git-history.sourceControlFileHistory",
          "name": "Git History",
          "when": "scmProvider == git",
          "icon": "$(history)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "git-history.refreshSourceControlHistory",
          "when": "view == git-history.sourceControlFileHistory",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "git-history.showFileHistory",
          "when": "resourceScheme == file",
          "group": "navigation@1"
        },
        {
          "command": "git-history.navigatePrevious",
          "when": "resourceScheme == git-history",
          "group": "navigation@2"
        },
        {
          "command": "git-history.navigateNext",
          "when": "resourceScheme == git-history",
          "group": "navigation@3"
        }
      ]
    },
    "configuration": {
      "title": "Git History Explorer",
      "properties": {
        "gitHistory.hoverMode": {
          "type": "string",
          "default": "decoration",
          "enum": [
            "always",
            "decoration",
            "never"
          ],
          "enumDescriptions": [
            "Show commit details when hovering anywhere on the line",
            "Show commit details only when hovering over the blame decoration at the end of the line",
            "Never show commit details on hover"
          ],
          "description": "Controls when to display commit information on hover."
        },
        "gitHistory.showBlameDecoration": {
          "type": "boolean",
          "default": true,
          "description": "Show git blame information (author, date, message) at the end of the current line."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src",
    "build:extension": "vsce package",
    "build": "pnpm run compile && pnpm run build:extension",
    "commit": "cz",
    "version": "conventional-changelog -i CHANGELOG.md -s -r 1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.39.1",
    "git-cz": "^4.9.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vsce": "^2.15.0"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  }
}

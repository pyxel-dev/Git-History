{
  "name": "git-history",
  "displayName": "Git History",
  "description": "Browse the Git history of your files",
  "version": "0.0.1",
  "license": "MIT",
  "publisher": "Pyxel",
  "author": {
    "name": "Pyxel",
    "url": "https://pyxel.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pyxel-dev/git-history.git"
  },
  "engines": {
    "node": ">= 24",
    "npm": "please use pnpm",
    "pnpm": ">= 10",
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "keywords": [
    "git",
    "history",
    "blame",
    "log"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "build:extension": "vsce package",
    "build": "pnpm run compile && pnpm run build:extension"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vsce": "^2.15.0"
  }
}
